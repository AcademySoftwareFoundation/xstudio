				"maximum": 65535,
				"datatype": "int",
				"context": ["APPLICATION"]
			},
			"port_maximum": {
				"path": "/core/sync/port_maximum",
				"default_value": 12346,
				"description": "SYNC maximum port number.",
				"value": 45130,
				"minimum": 0,
				"maximum": 65535,
				"datatype": "int",
				"context": ["APPLICATION"]
			},
			"bind_address": {
				"path": "/core/sync/bind_address",
				"default_value": "127.0.0.1",
