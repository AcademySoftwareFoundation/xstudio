				"path": "/core/sync/enabled",
				"default_value": false,
				"description": "Enable external SYNC API port.",
				"value": false,
				"datatype": "bool",
				"context": ["APPLICATION"]
			},
			"port_minimum": {
				"path": "/core/sync/port_minimum",
				"default_value": 12346,
